{
  "compilerOptions": {
    "target": "ES2015",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["src/modules/views/components/*"],
      "@/context/*": ["src/modules/context/*"],
      "@/models/*": ["src/modules/models/*"],
      "@/services/*": ["src/modules/services/*"],
      "@/styles/*": ["src/styles/*"],
      "@/hooks/*": ["src/hooks/*"],
      "@/useCases/*": ["src/modules/useCases/*"],
      "@/assets/*": ["public/assets/*"],
      "@/containers/*": ["src/modules/views/containers/*"]
    }
  },
  "include": ["next-env.d.ts", "src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
